{
  "name": "normalized-reducers-utils",
  "description": "Utility functions and types for normalized reducers architectures",
  "repository": {
    "type": "git",
    "url": "https://github.com/lolero/normalized-reducers-utils"
  },
  "version": "0.0.0",
  "license": "MIT",
  "author": "Dr. Rodrigo Segura <lolero@gmail.com> (https://github.com/lolero)",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "build",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "reset:clean": "rm -rf node_modules/ package-lock.json yarn.lock build/ coverage/ .husky .eslintignore .prettierignore",
    "reset:install": "ln -s .gitignore .eslintignore && ln -s .gitignore .prettierignore && yarn install",
    "reset:reset": "yarn reset:clean && yarn reset:install",
    "git-hooks:clean": "git config --unset core.hooksPath",
    "git-hooks:set": "yarn husky install && yarn husky add .husky/pre-commit 'yarn lint:fix' && yarn husky add .husky/pre-commit 'yarn commitlint --edit $1'",
    "git-hooks:reset": "yarn git-hooks:clean && yarn git-hooks:set",
    "build:prod": "tsc --declaration --noEmit false --module commonjs",
    "test:test": "react-scripts test",
    "test:coverage": "yarn test:test -- --coverage --watchAll=false",
    "lint:check": "eslint       './**/*.{js,jsx,ts,tsx}' && prettier --list-different './**/*.{js,jsx,ts,tsx,css,scss,less,json,md,yml,yaml}'",
    "lint:fix": "  eslint --fix './**/*.{js,jsx,ts,tsx}' && prettier --write          './**/*.{js,jsx,ts,tsx,css,scss,less,json,md,yml,yaml}'"
  },
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-angular": "^13.1.0",
    "@tsconfig/node12": "^1.0.7",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.161",
    "commitizen": "^4.2.1",
    "eslint-config-airbnb-typescript-prettier": "^4.2.0",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-jsdoc": "^37.0.3",
    "husky": "^7.0.4",
    "prettier": "^2.1.1",
    "react-scripts": "^4.0.3",
    "redux-saga-test-plan": "^4.0.0-rc.3",
    "semantic-release": "^18.0.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "lodash": "^4.17.20",
    "redux-saga": "^1.1.3",
    "reselect": "^4.1.2"
  },
  "eslintConfig": {
    "extends": [
      "plugin:jsdoc/recommended",
      "plugin:jest/recommended",
      "plugin:jest/style",
      "airbnb-typescript-prettier"
    ],
    "env": {
      "jest/globals": true
    },
    "rules": {
      "no-underscore-dangle": "off",
      "import/prefer-default-export": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/*",
      "!src/**/*types.ts"
    ],
    "coverageReporters": [
      "html",
      "text"
    ]
  }
}
