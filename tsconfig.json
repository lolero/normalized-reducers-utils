{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "build"
  },
  "exclude": [
    "build",
    "coverage",
    "node_modules",
    "**/*/__tests__",
    "**/*/*.test.*"
  ],
  "include": ["src", ".commitlintrc.js", ".travis.yml"]
}
